datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String      @id @default(cuid())
  email         String      @unique
  password      String
  name          String
  role          Role        @default(EMPLOYEE)
  jobTitle      String?     // Custom role title e.g. CEO, HR Manager
  status        Status      @default(PENDING)
  dailyTarget   Float?      // No default, starts empty
  workDays      Int[]       // [0,1,2,3,4] for Sun-Thu
  workMode      WorkMode    @default(TIME_BASED)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  image         String?     // Base64 or URL
  resetToken          String?
  resetTokenExpiry    DateTime?
  
  timeEntries   TimeEntry[]
  tasks         Task[]
  notifications Notification[]
  
  // Group membership
  groupId       String?
  group         Group?  @relation("GroupMembers", fields: [groupId], references: [id], onDelete: SetNull)
  managedGroups Group[] @relation("GroupManager")

  // Dynamic Hierarchy
  managerId     String?
  manager       User?   @relation("UserHierarchy", fields: [managerId], references: [id], onDelete: SetNull)
  directReports User[]  @relation("UserHierarchy")
  
  projectId     String?
  project       Project?    @relation(fields: [projectId], references: [id])

  // Join Requests
  pendingProjectId String?
}

model Project {
  id        String   @id @default(cuid())
  name      String
  logo      String?  // URL or Base64
  workMode  WorkMode @default(TIME_BASED)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  users     User[]
  groups    Group[]
}

model Group {
  id          String   @id @default(cuid())
  name        String
  description String?
  color       String   @default("#3B82F6")
  projectId   String
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  managerId   String?
  manager     User?    @relation("GroupManager", fields: [managerId], references: [id], onDelete: SetNull)
  members     User[]   @relation("GroupMembers")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model TimeEntry {
  id          String    @id @default(cuid())
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  startTime   DateTime
  endTime     DateTime?
  description String?
  isManual    Boolean   @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  breaks      TimeBreak[]
  
  tasks       Task[]
}

model TimeBreak {
  id          String    @id @default(cuid())
  timeEntryId String
  timeEntry   TimeEntry @relation(fields: [timeEntryId], references: [id], onDelete: Cascade)
  startTime   DateTime
  endTime     DateTime?
}

model Task {
  id           String       @id @default(cuid())
  title        String
  description  String?
  status       TaskStatus   @default(TODO)
  priority     TaskPriority @default(MEDIUM)
  deadline     DateTime?
  
  // Deprecated but kept for now to avoid data loss during rapid proto
  isCompleted  Boolean      @default(false) 

  // assignedToId String // Removed for Many-to-Many
  // assignedTo   User         @relation(fields: [assignedToId], references: [id], onDelete: Cascade) // Removed
  assignees    User[]
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  
  timeEntries  TimeEntry[]
  checklist    ChecklistItem[]
}

model ChecklistItem {
  id        String   @id @default(cuid())
  taskId    String
  task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  text      String
  isDone    Boolean  @default(false)
  createdAt DateTime @default(now())
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  DONE
  BLOCKED
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum Role {
  ADMIN
  MANAGER
  EMPLOYEE
}

enum Status {
  PENDING
  ACTIVE
  REJECTED
}

model Notification {
  id        String           @id @default(cuid())
  userId    String
  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  title     String
  message   String
  link      String?          // URL to redirect to
  type      NotificationType @default(INFO)
  isRead    Boolean          @default(false)
  createdAt DateTime         @default(now())
}

enum NotificationType {
  INFO
  WARNING
  SUCCESS
  ERROR
}

enum WorkMode {
  OUTPUT_BASED // Net work (Total - Breaks)
  TIME_BASED   // Time at work (Total including Breaks)
}

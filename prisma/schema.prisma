datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String      @id @default(cuid())
  email         String      @unique
  password      String
  name          String
  role          Role        @default(EMPLOYEE)
  jobTitle      String?     // Custom role title e.g. CEO, HR Manager
  status        Status      @default(PENDING)
  dailyTarget   Float?      // No default, starts empty
  workDays      Int[]       // [0,1,2,3,4] for Sun-Thu
  workMode      WorkMode    @default(TIME_BASED)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  image         String?     // Base64 or URL
  resetToken          String?
  resetTokenExpiry    DateTime?
  
  timeEntries   TimeEntry[]
  tasks         Task[]
  notifications Notification[]
  
  // Group membership
  groupId       String?
  group         Group?  @relation("GroupMembers", fields: [groupId], references: [id], onDelete: SetNull)
  managedGroups Group[] @relation("GroupManager")

  // Dynamic Hierarchy
  managerId     String?
  manager       User?   @relation("UserHierarchy", fields: [managerId], references: [id], onDelete: SetNull)
  directReports User[]  @relation("UserHierarchy")
  
  projectId     String?
  project       Project?    @relation(fields: [projectId], references: [id])

  
  // Join Requests
  pendingProjectId String?
  
  // Events
  createdEvents     Event[] @relation("CreatedEvents")
  eventParticipants EventParticipant[]
  
  // NextAuth
  accounts      Account[]
  sessions      Session[]
}

model Project {
  id        String   @id @default(cuid())
  name      String
  logo      String?  // URL or Base64
  workMode  WorkMode @default(TIME_BASED)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  users     User[]
  groups    Group[]
  events    Event[]
}

model Group {
  id          String   @id @default(cuid())
  name        String
  description String?
  color       String   @default("#3B82F6")
  projectId   String
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  managerId   String?
  manager     User?    @relation("GroupManager", fields: [managerId], references: [id], onDelete: SetNull)
  members     User[]   @relation("GroupMembers")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model TimeEntry {
  id          String    @id @default(cuid())
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  startTime   DateTime
  endTime     DateTime?
  description String?
  isManual    Boolean   @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  breaks      TimeBreak[]
  
  tasks       Task[]
}

model TimeBreak {
  id          String    @id @default(cuid())
  timeEntryId String
  timeEntry   TimeEntry @relation(fields: [timeEntryId], references: [id], onDelete: Cascade)
  startTime   DateTime
  endTime     DateTime?
}

model Task {
  id           String       @id @default(cuid())
  title        String
  description  String?
  status       TaskStatus   @default(TODO)
  priority     TaskPriority @default(MEDIUM)
  deadline     DateTime?
  
  // Deprecated but kept for now to avoid data loss during rapid proto
  isCompleted  Boolean      @default(false) 

  // assignedToId String // Removed for Many-to-Many
  // assignedTo   User         @relation(fields: [assignedToId], references: [id], onDelete: Cascade) // Removed
  assignees    User[]
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  
  timeEntries  TimeEntry[]
  checklist    ChecklistItem[]
}

model ChecklistItem {
  id        String   @id @default(cuid())
  taskId    String
  task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  text      String
  isDone    Boolean  @default(false)
  createdAt DateTime @default(now())
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  DONE
  BLOCKED
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum Role {
  ADMIN
  MANAGER
  EMPLOYEE
}

enum Status {
  PENDING
  ACTIVE
  REJECTED
}

model Notification {
  id        String           @id @default(cuid())
  userId    String
  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  title     String
  message   String
  link      String?          // URL to redirect to
  type      NotificationType @default(INFO)
  isRead    Boolean          @default(false)
  createdAt DateTime         @default(now())
}

enum NotificationType {
  INFO
  WARNING
  SUCCESS
  ERROR
}

enum WorkMode {
  OUTPUT_BASED // Net work (Total - Breaks)
  TIME_BASED   // Time at work (Total including Breaks)
  PROJECT_BASED // Deprecated: Kept for build backward compatibility
}

model Event {
  id          String   @id @default(cuid())
  title       String
  description String?
  startTime   DateTime
  endTime     DateTime
  allDay      Boolean  @default(false)
  location    String?
  
  // Type of event
  type        EventType @default(MEETING)
  
  // Optional recurrence
  recurrence     RecurrenceType? 
  recurrenceEnd  DateTime?
  
  // Relations
  createdBy   User     @relation("CreatedEvents", fields: [createdById], references: [id], onDelete: Cascade)
  createdById String
  
  // Optional project relation
  project     Project? @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId   String?
  
  // Participant tracking
  participants EventParticipant[]
  
  // Reminders
  reminders   EventReminder[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([createdById])
  @@index([projectId])
  @@index([startTime])
}

enum EventType {
  MEETING      // פגישה
  APPOINTMENT  // תור
  TASK_TIME    // זמן מוקצב למשימה
  BREAK        // הפסקה
  PERSONAL     // אישי
  OTHER        // אחר
}

enum RecurrenceType {
  DAILY
  WEEKLY
  MONTHLY
}

model EventParticipant {
  id        String   @id @default(cuid())
  event     Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  eventId   String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  status    ParticipantStatus @default(PENDING)
  
  @@unique([eventId, userId])
  @@index([userId])
}

enum ParticipantStatus {
  PENDING
  ACCEPTED
  DECLINED
  TENTATIVE
}

model EventReminder {
  id             String   @id @default(cuid())
  event          Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  eventId        String
  minutesBefore  Int      // כמה דקות לפני להזכיר
  sent           Boolean  @default(false)
  
  @@index([eventId])
}

// NextAuth Models
model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.Text
  access_token       String?  @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

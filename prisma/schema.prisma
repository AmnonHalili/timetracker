datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id               String    @id @default(cuid())
  email            String    @unique
  emailVerified    DateTime?
  password         String?
  name             String
  role             Role      @default(EMPLOYEE)
  jobTitle         String? // Custom role title e.g. CEO, HR Manager
  status           Status    @default(PENDING)
  dailyTarget      Float? // No default, starts empty
  workDays         Int[] // [0,1,2,3,4] for Sun-Thu
  workMode         WorkMode  @default(TIME_BASED)
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  image            String? // Base64 or URL
  resetToken       String?
  resetTokenExpiry DateTime?
  lastSeen         DateTime? // Track online status

  timeEntries   TimeEntry[]
  workdays      Workday[]
  tasks         Task[]
  notifications Notification[]

  // Group membership
  groupId       String?
  group         Group?  @relation("GroupMembers", fields: [groupId], references: [id], onDelete: SetNull)
  managedGroups Group[] @relation("GroupManager")

  // Dynamic Hierarchy
  managerId     String?
  manager       User?   @relation("UserHierarchy", fields: [managerId], references: [id], onDelete: SetNull)
  directReports User[]  @relation("UserHierarchy")

  // Shared Chiefs: Chiefs with the same sharedChiefGroupId are partners
  // They share the same employees and permissions
  sharedChiefGroupId String?

  // Deprecated: Kept to prevent data loss in Vercel build
  secondaryManagerId String?

  // Secondary Manager Relations (Matrix Management)
  secondaryManagers     SecondaryManager[] @relation("SecondaryManagers")
  secondaryManagedUsers SecondaryManager[] @relation("SecondaryManagedUsers")

  projectId String?
  project   Project? @relation(fields: [projectId], references: [id])

  // Join Requests
  pendingProjectId String?

  // Events
  createdEvents     Event[]            @relation("CreatedEvents")
  eventParticipants EventParticipant[]

  // Stripe Subscription
  stripeCustomerId       String?   @unique
  stripeSubscriptionId   String?   @unique
  stripePriceId          String?
  stripeCurrentPeriodEnd DateTime?
  plan                   Plan      @default(FREE)

  // Analytics
  analyticsSnapshots AnalyticsSnapshot[]
  insightSettings    UserInsightSettings?
  recommendations    Recommendation[]

  // NextAuth
  accounts Account[]
  sessions Session[]
}

model SecondaryManager {
  id          String   @id @default(cuid())
  employeeId  String
  employee    User     @relation("SecondaryManagers", fields: [employeeId], references: [id], onDelete: Cascade)
  managerId   String
  manager     User     @relation("SecondaryManagedUsers", fields: [managerId], references: [id], onDelete: Cascade)
  permissions String[] // e.g., ["VIEW_TIME", "EDIT_SETTINGS", "APPROVE_TIME", "MANAGE_TASKS"]
  createdAt   DateTime @default(now())

  @@unique([employeeId, managerId])
  @@index([employeeId])
  @@index([managerId])
}

model Project {
  id        String   @id @default(cuid())
  name      String
  joinCode  String   @unique @default(cuid()) // Will change default in logic, but need a default for migration or make optional first. Actually let's make it mandatory but we will handle migration or just reset db since it's dev. Better: String @unique
  logo      String? // URL or Base64
  workMode  WorkMode @default(TIME_BASED)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  users     User[]
  groups    Group[]
  events    Event[]

  // Work Location (Optional GPS verification)
  workLocationLatitude  Float?
  workLocationLongitude Float?
  workLocationRadius    Float?  @default(150) // in meters, default 150m
  workLocationAddress   String? // Optional human-readable address
  isRemoteWork          Boolean @default(true) // If true, no location verification required (for remote teams)
}

model Group {
  id          String   @id @default(cuid())
  name        String
  description String?
  color       String   @default("#3B82F6")
  projectId   String
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  managerId   String?
  manager     User?    @relation("GroupManager", fields: [managerId], references: [id], onDelete: SetNull)
  members     User[]   @relation("GroupMembers")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Workday {
  id          String    @id @default(cuid())
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  workdayStartTime DateTime
  workdayEndTime   DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // GPS Location tracking (optional)
  locationRequired      Boolean @default(false) // Whether location was required
  startLocationLat      Float? // GPS coordinates at start
  startLocationLng      Float?
  startLocationVerified Boolean @default(false) // Whether location was verified at start
  endLocationLat        Float? // GPS coordinates at end
  endLocationLng        Float?
  endLocationVerified   Boolean @default(false) // Whether location was verified at end
  locationStatus        String? // "verified", "unavailable", "outside_area", "not_required"

  @@index([userId, workdayStartTime])
  @@index([userId])
}

model TimeEntry {
  id          String      @id @default(cuid())
  userId      String
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  startTime   DateTime
  endTime     DateTime?
  description String?
  isManual    Boolean     @default(false)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  breaks      TimeBreak[]

  tasks     Task[]
  subtaskId String?
  subtask   SubTaskItem? @relation(fields: [subtaskId], references: [id], onDelete: SetNull)

  // Note: TimeEntry is now independent from Workday - it only tracks task-focused work time
}

model TimeBreak {
  id          String    @id @default(cuid())
  timeEntryId String
  timeEntry   TimeEntry @relation(fields: [timeEntryId], references: [id], onDelete: Cascade)
  startTime   DateTime
  endTime     DateTime?
  reason      String? // e.g., "left_work_area", "manual", "lunch"
  locationLat Float? // GPS coordinates when break started
  locationLng Float?
}

model Task {
  id          String       @id @default(cuid())
  title       String
  description String?
  status      TaskStatus   @default(TODO)
  priority    TaskPriority @default(MEDIUM)
  deadline    DateTime?

  // Deprecated but kept for now to avoid data loss during rapid proto
  isCompleted Boolean @default(false)

  // assignedToId String // Removed for Many-to-Many
  // assignedTo   User         @relation(fields: [assignedToId], references: [id], onDelete: Cascade) // Removed
  assignees User[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  timeEntries TimeEntry[]
  checklist   ChecklistItem[]
  subtasks    SubTaskItem[]
}

model ChecklistItem {
  id        String   @id @default(cuid())
  taskId    String
  task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  text      String
  isDone    Boolean  @default(false)
  createdAt DateTime @default(now())
}

model SubTaskItem {
  id          String      @id @default(cuid())
  taskId      String
  task        Task        @relation(fields: [taskId], references: [id], onDelete: Cascade)
  title       String
  isDone      Boolean     @default(false)
  createdAt   DateTime    @default(now())
  timeEntries TimeEntry[]
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  DONE
  BLOCKED
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
}

enum Role {
  ADMIN
  MANAGER
  EMPLOYEE
}

enum Status {
  PENDING
  ACTIVE
  REJECTED
}

model Notification {
  id        String           @id @default(cuid())
  userId    String
  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  title     String
  message   String
  link      String? // URL to redirect to
  type      NotificationType @default(INFO)
  isRead    Boolean          @default(false)
  createdAt DateTime         @default(now())
}

enum NotificationType {
  INFO
  WARNING
  SUCCESS
  ERROR
}

enum WorkMode {
  OUTPUT_BASED // Net work (Total - Breaks)
  TIME_BASED // Time at work (Total including Breaks)
  PROJECT_BASED // Deprecated: Kept for build backward compatibility
}

model Event {
  id          String   @id @default(cuid())
  title       String
  description String?
  startTime   DateTime
  endTime     DateTime
  allDay      Boolean  @default(false)
  location    String?

  // Type of event
  type EventType @default(MEETING)

  // Optional recurrence
  recurrence    RecurrenceType?
  recurrenceEnd DateTime?

  // Relations
  createdBy   User   @relation("CreatedEvents", fields: [createdById], references: [id], onDelete: Cascade)
  createdById String

  // Optional project relation
  project   Project? @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId String?

  // Participant tracking
  participants EventParticipant[]

  // Reminders
  reminders EventReminder[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([createdById])
  @@index([projectId])
  @@index([startTime])
}

enum EventType {
  MEETING // פגישה
  APPOINTMENT // תור
  TASK_TIME // זמן מוקצב למשימה
  BREAK // הפסקה
  PERSONAL // אישי
  OTHER // אחר
}

enum RecurrenceType {
  DAILY
  WEEKLY
  MONTHLY
}

model EventParticipant {
  id      String            @id @default(cuid())
  event   Event             @relation(fields: [eventId], references: [id], onDelete: Cascade)
  eventId String
  user    User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId  String
  status  ParticipantStatus @default(PENDING)

  @@unique([eventId, userId])
  @@index([userId])
}

enum ParticipantStatus {
  PENDING
  ACCEPTED
  DECLINED
  TENTATIVE
}

model EventReminder {
  id            String  @id @default(cuid())
  event         Event   @relation(fields: [eventId], references: [id], onDelete: Cascade)
  eventId       String
  minutesBefore Int // כמה דקות לפני להזכיר
  sent          Boolean @default(false)

  @@index([eventId])
}

// NextAuth Models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Analytics Models for AI Productivity Insights
model AnalyticsSnapshot {
  id     String   @id @default(cuid())
  userId String
  user   User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  date   DateTime @default(now())

  // Work Metrics
  totalHours      Float
  productiveHours Float
  tasksCompleted  Int
  breaksTaken     Int

  // Scores (0-100)
  focusScore      Float
  efficiencyScore Float
  balanceScore    Float

  // Patterns
  peakHourStart  Int?
  peakHourEnd    Int?
  longestSession Int // in minutes
  averageSession Int // in minutes

  // Risk Indicators
  burnoutRisk     Boolean @default(false)
  overtimeHours   Float   @default(0)
  lateWorkHours   Float   @default(0)
  weekendWork     Float   @default(0)
  consecutiveDays Int     @default(0)

  createdAt DateTime @default(now())

  @@unique([userId, date])
  @@index([userId])
  @@index([date])
}

model UserInsightSettings {
  id     String @id @default(cuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Customizable thresholds
  dailyHoursWarning  Float @default(10)
  weeklyHoursWarning Float @default(50)
  minBreaksPerDay    Int   @default(2)
  maxConsecutiveDays Int   @default(7)

  // Preferences
  enableWeeklyReport  Boolean @default(true)
  enableBurnoutAlerts Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Recommendation {
  id        String                 @id @default(cuid())
  userId    String
  user      User                   @relation(fields: [userId], references: [id], onDelete: Cascade)
  type      RecommendationType
  priority  RecommendationPriority
  title     String
  message   String
  actionUrl String?
  dismissed Boolean                @default(false)
  createdAt DateTime               @default(now())

  @@index([userId])
  @@index([dismissed])
}

enum RecommendationType {
  SCHEDULE_OPTIMIZATION
  BREAK_REMINDER
  WORKLOAD_BALANCE
  SKILL_DEVELOPMENT
  BURNOUT_PREVENTION
  EFFICIENCY_TIP
}

enum RecommendationPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum Plan {
  FREE
  TIER1
  TIER2
  TIER3
}
